<div class="container text-center my-3">
    <h1><strong>Cliente {{data.empresa}}</strong></h1>
    <div class="form-group row">
        <label for="albaran" class="col-form-label col-4 text-start">Cargar entrega</label>
        <div class="col-8">
            <input type="text" class="form-control" id="albaran" name="albaran" value="{{data.ae}}" disabled>
        </div>
        <label for="albaran" class="col-form-label col-4 text-start">Etiqueta</label>
        <div class="col-8">
            <input type="text" class="form-control" id="etiqueta" name="etiqueta"
                placeholder="CÃ³digo de barras del bulto o palet">
        </div>
    </div>
    <br>
    <div class="form-check form-check-inline">
        <input class="form-check-input" type="radio" name="inlineRadioOptions" id="cargar" value="option1"
            checked>
        <label class="form-check-label" for="cargar">Cargar</label>
    </div>
    <div class="form-check form-check-inline">
        <input class="form-check-input" type="radio" name="inlineRadioOptions" id="descargar" value="option2">
        <label class="form-check-label" for="descargar">Descargar</label>
    </div>
    <hr>
    <div class="progress">
        <div id="barra" class="progress-bar progress-bar-striped progress-bar-animated" role="progressbar" aria-valuenow="0"
            aria-valuemin="0" aria-valuemax="100" style="width: 0%;"></div>
    </div>
    <br>
    <div id="cargas">
        {{#each data.lecturas}}
        <button type="button" id="{{Descripcion1}}" class="btn btn-outline-secondary btn-lg m-1">{{Descripcion2}}</button>
        {{/each}}
    </div>
</div>
<script src="../javascripts/cargas.js"></script>