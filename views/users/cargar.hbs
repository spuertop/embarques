<div class="container text-center my-3">
    <h1><strong>Cliente {{data.empresa}}</strong></h1>
    <div class="form-group row">
        <label for="albaran" class="col-form-label col-4 text-start">Cargar entrega</label>
        <div class="col-8">
            <input type="text" class="form-control" id="albaran" name="albaran" value="{{data.ae}}" disabled>
        </div>
        <label for="albaran" class="col-form-label col-4 text-start">Etiqueta</label>
        <div class="col-8">
            <input type="text" class="form-control" id="etiqueta" name="etiqueta"
                placeholder="CÃ³digo de barras del bulto o palet">
        </div>
    </div>
    <br>

    <div class="btn-group d-flex" role="group" aria-label="Basic radio toggle button group">
        <input type="radio"  class="btn-check" name="btnradio" id="cargar" autocomplete="off" checked>
        <label style="width: 50%;" class="btn btn-outline-primary" for="cargar"><strong>CARGAR</strong></label>
        <input type="radio" class="btn-check" name="btnradio" id="descargar" autocomplete="off">
        <label style="width: 50%;" class="btn btn-outline-primary" for="descargar"><strong>DESCARGAR</strong></label>
    </div>


    <hr>
    <div class="progress">
        <div id="barra" class="progress-bar progress-bar-striped progress-bar-animated bg-success" role="progressbar"
            aria-valuenow="0" aria-valuemin="0" aria-valuemax="100" style="width: 0%;"></div>
    </div>
    <br>
    <div id="cargas">
        {{#each data.lecturas}}
        <button type="button" id="{{Descripcion1}}"
            class="btn btn-outline-danger btn-lg m-1 down">{{Descripcion2}}</button>
        {{/each}}
    </div>
    <div id="toast"></div>
</div>
<script src="../javascripts/cargas.js"></script>