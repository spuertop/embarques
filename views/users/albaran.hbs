<div class="container text-center my-3">
    <h1><strong>Cliente {{data.empresa}}</strong></h1>
    <form method="GET" action="carga" class="form-group">
        <h2><label for="albaran" class="form-label mt-4">Número de albarán a cargar</label></h2>
        <input type="text" style="height: 50px;" class="form-control" id="albaran" name="albaran" placeholder="Número de AE">
        <button type="submit" style="display:none">Submit</button>
        <!--<small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>-->
    </form>
    <br>
    <div id="result"></div>
    {{#if data.notfound}}
    <div>
        <div class="alert alert-dismissible alert-danger">
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            <strong>Error!</strong> Albaran incorrecto. No existe o es de otro cliente.
        </div>
    </div>
    {{/if}}
</div>
<script src="../javascripts/albaran.js"></script>